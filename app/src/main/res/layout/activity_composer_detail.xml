<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".composer.ComposerDetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/composerDetailAvartar"
            android:layout_width="300dp"
            android:layout_height="300dp"/>
        <EditText
            android:id="@+id/composerDetailName"
            android:inputType="text"
            android:hint="Composer Name"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách bài hát"/>
            <Button
                android:id="@+id/addComposerSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"/>
            <Button
                android:id="@+id/searchComposerSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"/>
            <Button
                android:id="@+id/sortComposerSong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/composerSongList"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>