<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/main_gradient_bkg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout android:orientation="vertical"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".PerformanceDetail.PerformanceDetailActivity">

        <TextView
            android:text="Chi tiết biểu diễn"
            android:textStyle="bold"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:text="🎙 Ca sĩ biểu diễn"
            android:textSize="26sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp">

            <TextView
                android:id="@+id/singerPerformName"
                android:layout_margin="10dp"
                android:hint="Singer name"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:text="🎵 Bài hát"
            android:textSize="26sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/songNameTextview"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="Bấm select để chọn bài hát"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/selectSong"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="18sp"
                    android:text="Select"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


<!--        <ImageView-->
<!--            android:layout_gravity="center"-->
<!--            android:id="@+id/performDetailImage"-->
<!--            android:layout_width="300dp"-->
<!--            android:layout_height="300dp" />-->

        <TextView
            android:text="⏱ Thời gian"
            android:textSize="26sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/dateTextview"
                    android:text="Ngay"
                    android:gravity="center"
                    android:textSize="26sp"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <DatePicker
                    android:id="@+id/startDatePicker"
                    android:datePickerMode="spinner"
                    android:calendarViewShown="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:text="📍Địa điểm"
            android:textSize="26sp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardCornerRadius="10dp"
            card_view:cardElevation="10dp">
            <EditText
                android:id="@+id/locationTextview"
                android:hint="Location"
                android:layout_margin="10dp"
                android:inputType="textMultiLine"
                android:textSize="26sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
