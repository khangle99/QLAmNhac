<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".singer.SingerDetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:clickable="true"
            android:layout_gravity="center"
            android:id="@+id/singerDetailAvartar"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:focusable="true" />
        <EditText
            android:id="@+id/singerDetailName"
            android:inputType="text"
            android:hint="Singer Name"
            android:textSize="30sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách biểu diễn"/>
            <Button
                android:id="@+id/addSingerPerformance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"/>
            <Button
                android:id="@+id/searchCSingerPerformance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"/>
            <Button
                android:id="@+id/sortSingerPerformance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/singerPerformanceList"
            android:layout_width="match_parent"
            android:nestedScrollingEnabled="false"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</ScrollView>